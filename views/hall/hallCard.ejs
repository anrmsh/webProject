<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <title><%= hall.hall_name %> | Restoplace</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/hallCard.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  </head>
  <body>
    <header>
      <input type="checkbox" id="toggler" />
      <label for="toggler" class="fas fa-bars"></label>
      <a href="/" class="logo">BanquetBooking<span>.</span></a>

      <nav class="navbar">
        <a href="/">Главная</a>
        <a href="/halls">Залы</a>
        <a href="#contact-info">Контакты</a>
      </nav>

      <div class="icons">
        <a href="#" class="fas fa-heart"></a>
        <% if (user) { %>
        <a href="/profile" class="fas fa-user" title="Профиль"></a>
        <a href="/logout" title="Выйти"
          ><i class="fa-solid fa-right-from-bracket"></i
        ></a>
        <% } else { %>
        <a href="/login" class="fas fa-user" title="Войти"></a>
        <% } %>
      </div>
    </header>

    <!-- Карточка зала -->
    <section class="hall-card">
      <div class="hall-top">
        <img src="<%= hall.image_path %>" alt="<%= hall.hall_name %>" />
        <div class="hall-info">
          <h2><%= hall.hall_name %></h2>
          <div class="additional-info">
            <p class="hall-rating">
              <strong>Рейтинг:</strong><%= hall.rating %> ⭐
            </p>
            <p><strong>Вместимость:</strong> <%= hall.capacity %> гостей</p>
            <p><strong>Цена за час:</strong> <%= hall.price %> BYN</p>
            <p><strong>Адрес:</strong> <%= hall.address %></p>
            <p class="hall-description"><%= hall.description %></p>
          </div>
          <button class="btn" id="bookBtn">Забронировать</button>
        </div>
      </div>
    </section>

    <!-- Модальное окно бронирования -->
    <div class="modal" id="bookingModal">
      <div class="modal-content">
        <h3>Бронирование зала</h3>

        <!-- Блок сообщений (inline) -->
        <div id="formMessage" role="status" aria-live="polite" style="margin-bottom:6px; color:#b02a37;"></div>

        <form id="bookingForm" action="/bookings" method="POST">
          <input type="hidden" name="hall_id" value="<%= hall.hall_id %>" />

          <label>Дата</label>
          <input type="text" id="datePicker" name="date" required />
          <!-- Показываем занятые слоты для выбранной даты -->
          <div id="bookedSlotsContainer" style="margin:8px 0; display:none;">
            <strong>Занятые слоты на выбранную дату:</strong>
            <ul id="bookedSlotsList" class="booked-slots-list"></ul>
          </div>

          <label>Время начала</label>
          <input type="time" name="start_time" id="startTime" required />

          <label>Время окончания</label>
          <input type="time" name="end_time" id="endTime" required />

          

          <label>Количество гостей</label>
          <input
            type="number"
            name="guest_count"
            min="1"
            max="<%= hall.capacity %>"
            required
          />

          <label>Тип мероприятия</label>
          <select id="eventType" name="event_type_id" required>
            <option value="">-- Выберите тип --</option>
            <% eventTypes.forEach(type => { %>
              <option value="<%= type.event_type_id %>"><%= type.type_name %></option>
            <% }) %>
            
          </select>

          <div id="otherEventBlock" style="display:none; margin-top: 10px;">
            <label>Уточните мероприятие</label>
            <input type="text" id="otherEventName" name="other_event_name" placeholder="Например, помолвка" />
          </div>

          <label>Выберите дополнительные услуги</label>
          <div id="servicesList">
            <% services.forEach(service => { %>
            <div class="service-item">
              <input
                type="checkbox"
                class="service-checkbox"
                data-price="<%= service.price %>"
                name="services"
                value="<%= service.service_id %>"
              />
              <span><%= service.service_name %> (+<%= service.price %> BYN)</span>
            </div>
            <% }) %>
          </div>

          <h4 class="total-text">
            Общая стоимость: <span id="totalPrice"><%= hall.price %></span> BYN
          </h4>

          <div style="display:flex; gap:8px; justify-content:center; margin-top:10px;">
            <button type="submit" class="btn" id="bookNowBtn">Оформить бронирование</button>
            <button type="button" class="btn btn-secondary" id="waitListBtn" style="display:none;">
              Добавить в лист ожидания
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Блок рекомендаций -->
    <section class="recommendations">
      <h2 class="heading">Похожие <span>залы</span></h2>
      <div class="recommendation-list">
        <% recommendations.forEach(r => { %>
        <div class="recommendation-card">
          <img src="<%= r.image_path %>" alt="<%= r.hall_name %>" />
          <div class="rec-info">
            <h3><%= r.hall_name %></h3>
            <p><%= r.price %> BYN / час</p>
            <a href="/halls/<%= r.hall_id %>" class="btn">Подробнее</a>
          </div>
        </div>
        <% }) %>
      </div>
    </section>


    <!-- Модальное окно подтверждения -->
<div class="modal" id="successModal">
  <div class="modal-content success">
    <div class="modal-icon"><i class="fa-solid fa-circle-check"></i></div>
    <h3>Бронирование успешно!</h3>
    <p id="successMessageText">Ваше бронирование создано. Спасибо!</p>
    <button id="closeSuccessBtn" class="btn">OK</button>
  </div>
</div>


    <script>
      window.__INITIAL_DATA__ = {
        hall: <%- JSON.stringify(hall) %>,
        services: <%- JSON.stringify(services) %>,
        disabledDates: <%- JSON.stringify(disabledDates) %> // используется только для подсветки дат с хотя бы одной бронью
      };
    </script>
    <script src="/script/hallCardScript.js"></script>
  </body>
</html>
